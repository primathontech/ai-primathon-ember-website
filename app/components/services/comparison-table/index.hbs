<section class='bg-[#1A284D] px-2 sm:px-6 py-10 sm:px-10 sm:py-24 lg:px-16 xl:p-24'>
  <div class='bg-white px-2 sm:px-6 py-14 rounded-xl'>
    <h2 class='font-semibold text-center text-[#05164D] text-2xl max-w-[600px] mx-auto mb-12'>{{@data.title}}</h2>
    <div class='table-wrapper hidden md:flex'>
      <table role='presentation' class='w-full'>
        <tr>
          {{#each @data.tableHeading as |heading|}}
            <th class='bg-[#F1F1F1] py-5 px-12 text-lg text-[#383838]'>{{heading}}</th>
          {{/each}}
        </tr>
        {{#each @data.tableRows as |tableRow|}}
          <tr key={{tableRow.id}} class='tabledata-wraper'>
            {{#each tableRow.tableData as |data|}}
              <td key={{data.id}} class='text-center p-2' style='background-color: {{data.bgColor}}'>
                {{data.text}}
              </td>
            {{/each}}
          </tr>
        {{/each}}

      </table>
    </div>
    <div class='flex md:hidden flex-col gap-y-12'>
      {{#each @data.mobileTableData as |item|}}
        <div key={{item.id}}>
          <div class='bg-[#f5f5f5] p-2 mb-4'>
            <p class='text-lg font-medium text-center mb-0'>{{item.title}}</p>
          </div>
          <table role='presentation' class='w-full'>
            <tr>
              {{#each item.tableHeading as |heading|}}
                <th class='bg-[#F1F1F1] p-1 py-2 sm:p-5 text-base sm:text-lg text-[#383838]'>{{heading}}</th>
              {{/each}}
            </tr>
            <tr>
              {{#each item.tableData as |data|}}
                <td key={{data.id}} class='text-center p-1 py-2' style='background-color: {{data.bgColor}}'>
                  {{data.text}}
                </td>
              {{/each}}
            </tr>

          </table>
        </div>

      {{/each}}

    </div>
  </div>
</section>