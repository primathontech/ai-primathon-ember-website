<section class='max-w-[1400px] px-4 py-10 sm:p-10 md:p-20 mx-auto flex items-center justify-between gap-x-6'>
  <div>
    <h2 class='mb-6 text-2xl font-medium max-w-[750px]'>{{@data.title}}</h2>
    <div>
      <ul class='bullet-list-ul'>
        {{#each @data.listItems as |item|}}
          <li key={{item.id}}>
            <p> {{item.text}}</p>
          </li>
        {{/each}}
      </ul>
    </div>
  </div>
  <div>
    <img src={{@data.imageSrc}} class='w-[350px] h-[350px]' alt={{@data.alt}} title={{@data.alt}} />
  </div>
</section>