<section class='hidden md:block px-32 mt-40'>
  <div>
    <h2 class='text-4xl font-medium'>{{@data.title}}</h2>
    <h3 class='text-2xl font-medium mt-4 mb-6'>{{@data.subTitle}}</h3>
    <p class='mb-16 max-w-[1040px]'>{{@data.description}}</p>
  </div>
  <div class='grid grid-cols-2 gap-x-16 gap-y-5'>
    {{#each @data.cardData as |case|}}
      <div>
        <div class='flex gap-3'>
          <div>
            <img src={{case.imageSrc}} />
          </div>
          <div class='w-11/12'>
            <h3 class='font font-medium text-lg mb-1'>{{case.cardTitle}}</h3>
            <p>{{html-safe case.cardContent}}</p>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</section>