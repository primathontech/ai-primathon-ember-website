<section class='flex flex-col md:flex-row justify-center gap-20 px-6 py-10 sm:px-10 sm:py-24 lg:px-24 xl:p-32'>
  <div>
    <h3 class='font-semibold text-4xl mb-5'>{{@data.heading}}</h3>
    <div class='max-w-[640px]'>
      <ul class='list-disc pl-4'>
        {{#each @data.bulletList as |list|}}
          <li class='leading-8 sm:leading-6'>{{list}}</li>
        {{/each}}
      </ul>
    </div>
  </div>
  <div class='flex flex-col gap-y-8'>
    {{#each @data.about as |item|}}
      <div key={{item.id}} class='flex items-center gap-x-4'>
        <div class='p-4 w-[56px] h-[56px] rounded-full bg-[#2487E8] items-center'>
          <img src={{item.imageSrc}} />
        </div>
        <div>
          <p class='text-lg font-medium mb-0'>{{item.title}}</p>
          <p class='text-sm text-[#0092FF] mb-0'>{{item.detail}}</p>
        </div>
      </div>
    {{/each}}
  </div>
</section>