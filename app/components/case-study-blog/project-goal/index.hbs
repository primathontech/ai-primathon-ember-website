<section
  class='flex items-center justify-center gap-20 md:bg-[#FFC700] md:h-[450px] mt-24 md:mt-32 flex-col md:flex-row md:p-24 xl:py-28 xl:px-44'
>
  <div class='pl-4 pr-4 md:p-0 md:h-[500px] lg:h-[600px] md:relative md:top-12 lg:top-0 lg:bottom-24'>
    <img src={{@data.imgSrc}} alt='iPhone image' class='h-[400px] md:h-[100%]' />
  </div>

  <div class='py-16 px-8 sm:py-28 sm:px-20 md:p-0 flex flex-col justify-center bg-[#FFC700]'>
    <h3 class='font-medium text-3xl md:text-4xl mb-11'>{{@data.heading}}</h3>
    <div class='md:max-w-[640px] lg:max-w-[780px] pl-6'>
      <ul class='list-disc'>
        {{#each @data.bulletList as |list|}}
          <li class='leading-8 sm:text-base lg:text-lg xl:text-xl'>{{list}}</li>
        {{/each}}
      </ul>
    </div>
  </div>
</section>