<div class="container-fluid hire-features" style="padding-top: 80px">
  <div class="orange-bar"></div>
  <div class="container">
    <h2 class="center">
      {{@title}}
    </h2>
    <p class="section-sub center">
      {{@description}}
    </p>
    <div class="row hire-feature-boxes-wrap">
      <div class="grid grid-cols-2 hire-feature-boxes">
        {{#each @data as |data|}}
          <div class="hire-feature-box">
            <h3>
              {{data.title}}
            </h3>
            <p>
              {{data.description}}
            </p>
          </div>
        {{/each}}
      </div>
      <div class="main-image">
        <img src="assets/svgs/build_amazing_teams.svg" loading="lazy" alt="Build amazing teams" />
      </div>
    </div>
  </div>
</div>