<div class="container-fluid blog-categories">
  <div class="container">
    <h2 class="center">
      {{@title}}
    </h2>
    <p class="section-sub center">
      {{@description}}
    </p>
    <div class="grid grid-cols-3 gap-8">
      {{#each @data as |data|}}
        <div class="blog-card">
          <a href={{data.link}} target="_blank">
            <img src={{data.blogImageUrl}} loading="lazy" alt={{data.title}} title={{data.title}} />
            <div class="blog-category">
              <h3>
                {{data.title}}
              </h3>
              {{{data.descriptionHtml}}}
            </div>
          </a>
        </div>
      {{/each}}
    </div>
    <div class="view-more">
      <a href="https://blog.primathon.in/" target="_blank">
        View More
      </a>
    </div>
  </div>
</div>