    <h2 class='text-2xl font-semibold text-[#198CCA] mb-4 mt-10'>{{@data.sectionJ.title}}</h2>
    <p>{{@data.sectionJ.overView}}</p>
  </div>

  {{! section K }}
  <div>
    <h2 class='text-2xl font-semibold text-[#198CCA] mb-4 mt-10'>{{@data.sectionK.title}}</h2>
    <p>{{html-safe @data.sectionK.overView}}</p>
  </div>

</section>
<Footer />