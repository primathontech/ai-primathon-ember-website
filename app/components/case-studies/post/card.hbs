<div class="post-card">
  <img src={{@data.poster}} loading="lazy" alt={{@data.title}} title={{@data.title}} />
  <div class="detail">
    <h3>
      {{@data.title}}
    </h3>
    <p>
      {{@data.description}}
    </p>
    <div>
      {{#each @data.tags as |tag|}}
        <CaseStudies::Post::Tags @text={{tag}} class="post-tag" />
      {{/each}}
    </div>
  </div>
</div>